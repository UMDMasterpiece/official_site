<h1 class="text-center mast-title">CONTACT US</h1>
<div class="col-md-offset-3">
  <div class="well well-sm">
    <div class="form-horizontal">
      <%= form_for @contact do |f| %>

        <!-- Name -->
        <div class="form-group">
          <%= f.label :name, class: 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.text_field :name,  required: true, class: 'form-control' %>
          </div>
        </div>

        <!-- Email -->
        <div class="form-group">
          <%= f.label :email,  class: 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.email_field :email,  required: true, class: 'form-control' %>
          </div>
        </div>

        <!-- Message -->
        <div class="form-group">
          <%= f.label :message, class: 'col-md-3 control-label' %>
          <div class="col-md-9">
            <%= f.text_area :message, as: :text, class: 'form-control' %>
          </div>
        </div>

        <!-- Hidden -->
        <div class="hidden form-group">
          <%= f.label :nickname %>
          <div class="col-md-9">
            <%= f.text_field :nickname, hint: 'leave this field blank', class: 'form-control' %>
          </div>
        </div>

        <!-- Submit button -->
        <div class="form-group">
          <div class="col-md-12 text-right">
            <%= f.submit 'Send', class: 'btn btn-primary btn-md new_color' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>