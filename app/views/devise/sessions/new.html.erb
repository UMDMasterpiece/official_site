<div class="col-md-6 col-md-offset-3">
    <h2 class="mast-title text-center">Log in</h2>
    <br />
    
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.email_field :email,  required: true, class: 'form-control', id: 'email', placeholder: 'E-mail' %>
        <br />
        <%= f.password_field :password, required: true, class: 'form-control', id: 'email', placeholder: 'Password'  %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>

